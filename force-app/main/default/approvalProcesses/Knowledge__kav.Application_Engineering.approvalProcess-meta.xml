<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Title</field>
        <field>Owner</field>
        <field>CreatedDate</field>
        <field>Data_category__c</field>
        <field>FirstPublishedDate</field>
        <field>IsLatestVersion</field>
        <field>IsMasterLanguage</field>
        <field>Language</field>
        <field>LastModifiedBy</field>
        <field>LastModifiedDate</field>
        <field>LastPublishedDate</field>
        <field>Manager_Email__c</field>
        <field>MasterVersion</field>
        <field>PublishStatus</field>
        <field>Summary</field>
        <field>SystemModstamp</field>
        <field>UrlName</field>
        <field>ValidationStatus</field>
        <field>VersionNumber</field>
        <field>IsVisibleInApp</field>
        <field>IsVisibleInPkb</field>
        <field>IsVisibleInCsp</field>
        <field>IsVisibleInPrm</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Knowledge__kav.PublishStatus</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.ValidationStatus</field>
            <operation>equals</operation>
            <value>Not Validated</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Profile</field>
            <operation>equals</operation>
            <value>Application Engineering</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Validation_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Send_Email_to_AE_Manager</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_the_Status_to_In_Review_AE</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Application Engineering</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
